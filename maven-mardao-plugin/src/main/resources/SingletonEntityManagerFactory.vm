package ${daoBasePackage};

import java.util.Map;

import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.Persistence;

public final class SingletonEntityManagerFactory implements EntityManagerFactory {
	
	static EntityManagerFactory _instance = null;
	
	public SingletonEntityManagerFactory(String persistenceUnitName) {
		if (null == _instance) {
			_instance = Persistence.createEntityManagerFactory(persistenceUnitName);
		}
	}

	public void close() {
		_instance.close();
	}

	public EntityManager createEntityManager() {
		return _instance.createEntityManager();
	}

	@SuppressWarnings("unchecked")
	public EntityManager createEntityManager(Map map) {
		return _instance.createEntityManager(map);
	}

	public boolean isOpen() {
		return _instance.isOpen();
	}

}

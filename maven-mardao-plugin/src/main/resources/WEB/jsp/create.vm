<?xml version="1.0" encoding="UTF-8" ?>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
	<jsp:include page="header.jsp">
		<jsp:param name="headTitle" value="${entity.simpleName} - <%=item.get${helper.firstToUpper($entity.pk.name)}()%>" />
    </jsp:include>
	<h1>Create ${entity.simpleName}</h1>
	<form id="${entity.simpleName}" name="${entity.simpleName}" method="post" action="">
	<table border="1">
		<thead>
			<tr>
				<th>Attribute</th>
				<th>Value</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>${entity.pk.name}</td>
				<td><input type="text" id="${entity.pk.name}" name="${entity.pk.name}" /></td>
			</tr>
#foreach( $field in $entity.fields )
			<tr>
				<td>${field.name}</td>
				<td><input type="text" id="${field.name}" name="${field.name}" /></td>
			</tr>
#end
		</tbody>
		<tfoot >
			<tr>
				<td></td>
				<td><input type="submit" /></td>
			</tr>
        </tfoot>
	</table>
	</form>
	<jsp:include page="footer.jsp">
		<jsp:param name="headTitle" value="${entity.simpleName} - <%=item.get${helper.firstToUpper($entity.pk.name)}()%>" />
    </jsp:include>
